{
  "packages": ["modules/*", "helpers/*"],
  "command": {
    "publish": {
      "ignoreChanges": [
        "**/*.md",
        "**/__fixtures__/**",
        "**/__tests__/**",
        "LICENSE"
      ],

      "allowBranch": "master",
      "message": "chore(release): publish %v",
      "conventionalCommits": true
    },
    "bootstrap": {}
  },
  "version": "independent"
}
