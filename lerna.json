{
  "packages": ["packages/*"],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "sort": true,
  "command": {
    "publish": {
      "ignoreChanges": ["**/*.md", "**/AUTHORS"],
      "allowBranch": "master",
      "message": "chore(release): publish",
      "conventionalCommits": true
    },
    "bootstrap": { "hoist": false },
    "clean": { "yes": true },
    "run": { "bail": false, "parallel": true, "stream": true },
    "exec": { "bail": false, "parallel": true, "stream": true }
  },
  "version": "independent"
}
