{
  "eslint.enable": true,
  "editor.formatOnSave": true,
  "prettier.eslintIntegration": true,
  "prettier.tslintIntegration": true,
  "prettier.stylelintIntegration": true,
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "cSpell.words": [
    "Damm",
    "Heroku",
    "Serializers",
    "execa",
    "inquier",
    "ipaddr",
    "lerna",
    "listr",
    "mdast",
    "monorepo",
    "printf",
    "projectz",
    "promisified",
    "todos",
    "unist"
  ],
  "markdownlint.config": {
    "MD013": false,
    "MD030": {
      "ul_single": 3,
      "ul_multi": 3
    },
    "MD007": { "indent": 4 }
  }
}
