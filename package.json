{
  "name": "cactus-utils",
  "version": "0.0.0",
  "private": true,
  "description": "Cactus Utilities monorepo",
  "homepage": "https://github.com/CactusTechnologies/cactus-utils#readme",
  "bugs": {
    "url": "https://github.com/CactusTechnologies/cactus-utils/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@ssh.dev.azure.com:Cactus Internal/cactus-utilities"
  },
  "license": "MIT",
  "author": "Cactus Technologies LLC <hi@cactus.is> (http://www.cactus.is)",
  "contributors": [
    "Jorge Proa√±o <jorge@cactus.is>"
  ],
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "commit": "git cz --no-verify",
    "lint": "eslint . --ignore-path .gitignore",
    "readme": "run-s readme:**",
    "readme:api": "lerna run --no-bail docs",
    "readme:mono": "package-scripts compile",
    "readme:pkg": "lerna exec --no-bail --concurrency=1 --stream package-scripts -- compile --no-todos",
    "test": "echo \"Error: No tests defined\" && exit 0",
    "todos": "package-scripts todos"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "config": {
    "commitizen": {
      "path": "@hnp/cz"
    },
    "scopes": [
      "application",
      "errors",
      "logger",
      "notifier",
      "request",
      "server",
      "utils",
      "uuid"
    ]
  },
  "devDependencies": {
    "@hnp/cz": "^1.0.6",
    "@hnp/package-scripts": "^1.0.9",
    "eslint": "^5.12.0",
    "eslint-config-hnp": "^1.0.6",
    "husky": "^1.3.1",
    "lerna": "^3.9.0",
    "lint-staged": "^8.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.15.3"
  },
  "engines": {
    "node": ">=10.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ],
    "*.{js,jsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{css,scss}": [
      "prettier --write",
      "stylelint --fix",
      "git add"
    ]
  }
}
