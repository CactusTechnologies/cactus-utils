{
  "name": "cactus-utils",
  "version": "0.0.0",
  "private": true,
  "description": "Cactus Utilities monorepo",
  "homepage": "https://github.com/CactusTechnologies/cactus-utils#readme",
  "bugs": {
    "url": "https://github.com/CactusTechnologies/cactus-utils/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:CactusTechnologies/cactus-utils.git"
  },
  "license": "MIT",
  "author": "Cactus Technologies LLC <hi@cactus.is> (http://www.cactus.is)",
  "contributors": [
    "Jorge ProanÌƒo <jorge@hiddennodeproblem.com>"
  ],
  "scripts": {
    "prebootstrap": "rm -rf ./node_modules package-lock.json && npm install",
    "bootstrap": "lerna clean -y && lerna bootstrap --hoist",
    "commit": "git cz --no-verify",
    "docs": "run-s docs:**",
    "docs:mono": "package-scripts compile",
    "docs:packages:api": "lerna run --no-bail docs",
    "docs:packages:pkg": "lerna exec --no-bail --concurrency=1 --stream package-scripts -- compile --no-todos",
    "lint": "eslint . --ignore-path .gitignore",
    "test": "echo \"Error: No tests defined\" && exit 1",
    "todos": "package-scripts todos"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run docs && lint-staged",
      "pre-push": "npm run lint"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@hnp/cz"
    },
    "scopes": [
      "application",
      "utils",
      "errors",
      "logger",
      "server",
      "request",
      "notifier",
      "uuid",
      "monorepo"
    ]
  },
  "devDependencies": {
    "@hnp/cz": "^1.0.7",
    "@hnp/package-scripts": "^1.0.11",
    "eslint": "^5.15.3",
    "eslint-config-hnp": "^1.1.0",
    "execa": "^1.0.0",
    "husky": "^1.3.1",
    "lerna": "^3.13.1",
    "lint-staged": "^8.1.5",
    "listr": "^0.14.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.4"
  }
}
