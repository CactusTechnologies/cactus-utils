{
  "name": "@cactus-technologies/tools",
  "version": "0.0.1",
  "private": true,
  "description": "",
  "homepage": "https://github.com/CactusTechnologies/cactus-node-tools#readme",
  "bugs": {
    "url": "https://github.com/CactusTechnologies/cactus-node-tools/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:CactusTechnologies/cactus-node-tools.git"
  },
  "license": "MIT",
  "author": "Cactus Technologies LLC <hi@cactus.is> (http://www.cactus.is)",
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist",
    "test": "run-s test:* -sn",
    "test:depcheck": "depcheck --ignores=husky --ignore-bin-package",
    "test:lint": "eslint --ignore-path .gitignore 'packages/**/*.js'",
    "test:outdated": "npm outdated --long",
    "precommit": "run-s test docs && lint-staged",
    "docs": "run-s docs:** -sn",
    "docs:01:authors": "git log --format='%aN <%aE>' | sort -f | uniq > AUTHORS",
    "docs:02:readme": "cat .readme.md > README.md",
    "docs:03:todos": "npm run todos -s -- --reporter vscode >> README.md",
    "docs:04:update": "projectz compile",
    "docs:05:add": "git add README.md AUTHORS LICENSE package.json",
    "todos": "leasot './packages/**/*' -Sx -i './node_modules/**/*'"
  },
  "devDependencies": {
    "lerna": "^3.0.0-rc.0",
    "eslint": "^5.3.0",
    "eslint-config-standard": "12.0.0-alpha.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "husky": "^0.14.3",
    "leasot": "^6.3.0",
    "lint-staged": "^7.2.0",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.14.0",
    "projectz": "^1.4.0",
    "sort-package-json": "^1.15.0"
  }
}
