{
  "name": "cactus-utils",
  "version": "0.0.0",
  "private": true,
  "description": "Cactus Utilities monorepo",
  "homepage": "https://github.com/CactusTechnologies/cactus-utils#readme",
  "bugs": {
    "url": "https://github.com/CactusTechnologies/cactus-utils/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:CactusTechnologies/cactus-utils.git"
  },
  "license": "MIT",
  "author": "Cactus Technologies LLC <hi@cactus.is> (http://www.cactus.is)",
  "contributors": [
    "Jorge Proa√±o <jorge@cactus.is>"
  ],
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "compile": "lerna run compile",
    "dev": "lerna run dev --scope \"@cactus-technologies/{notifier}\"",
    "lint": "lerna run lint",
    "readme": "run-s readme:*",
    "readme:packages": "lerna exec --concurrency=1 package-scripts -- compile --no-todos",
    "readme:root": "package-scripts compile",
    "test": "lerna run test",
    "todos": "package-scripts todos",
    "verify": "run-s compile test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "*.{css,scss}": [
      "prettier --write",
      "stylelint --fix",
      "git add"
    ],
    "*.{js,jsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts,tsx}": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "@hnp/cz"
    },
    "scopes": [
      "application",
      "errors",
      "logger",
      "notifier",
      "request",
      "server",
      "utils",
      "uuid"
    ]
  },
  "devDependencies": {
    "@hnp/cz": "^1.0.7",
    "@hnp/package-scripts": "^1.0.11",
    "eslint": "^5.14.1",
    "eslint-config-hnp": "^1.1.0",
    "husky": "^1.3.1",
    "lerna": "^3.13.0",
    "lint-staged": "^8.1.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.4",
    "stylelint": "^9.10.1",
    "stylelint-config-hnp": "^1.1.1",
    "tslint": "^5.13.0",
    "tslint-config-hnp": "^1.2.2",
    "typescript": "^3.3.3333"
  },
  "engines": {
    "node": ">=10.0"
  }
}
