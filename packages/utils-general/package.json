{
  "name": "@cactus-technologies/utils",
  "version": "1.0.3",
  "description": "Utility functions for node base apps",
  "homepage": "https://github.com/CactusTechnologies/cactus-utils#readme",
  "bugs": {
    "url": "https://github.com/CactusTechnologies/cactus-utils/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CactusTechnologies/cactus-utils.git"
  },
  "license": "UNLICENCED",
  "author": "Cactus Technologies, LLC <hi@cactus.is> (https://www.cactus.is)",
  "main": "index.js",
  "scripts": {
    "precommit": "npm run docs && lint-staged",
    "docs": "run-s docs:* -sn  && git add {README,TODO}.md AUTHORS",
    "docs:01authors": "git log --format='%aN <%aE>' | sort -f | uniq > AUTHORS",
    "docs:02usage": "jsdoc2md --template README.hbs --files index.js > README.md",
    "docs:03todos": "npm run todos -s -- --reporter markdown > TODO.md",
    "docs:04readme": "mos README.md",
    "docs:05readme": "cat TODO.md >> README.md",
    "test": "run-s test:* -sn",
    "test:depcheck": "depcheck --ignores=husky,config --ignore-bin-package",
    "test:lint": "eslint --ignore-path .gitignore '**/*.js'",
    "test:outdated": "npm outdated --long || true",
    "todos": "leasot './**/*' -Sx -i './node_modules/**/*'"
  },
  "dependencies": {
    "async": "^2.6.1",
    "config": "^2.0.1",
    "del": "^3.0.0",
    "execa": "^0.10.0",
    "json-stable-stringify": "^1.0.1",
    "load-json-file": "^5.0.0",
    "lodash": "^4.17.10",
    "make-dir": "^1.3.0",
    "p-tap": "^2.0.0",
    "rev-hash": "^2.0.0",
    "write-json-file": "^2.3.0"
  },
  "devDependencies": {
    "depcheck": "^0.6.8",
    "eslint": "^4.19.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-standard": "^3.1.0",
    "husky": "^0.14.3",
    "jsdoc-to-markdown": "^4.0.1",
    "leasot": "^6.3.0",
    "lint-staged": "^7.2.0",
    "mos": "^1.3.1",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.14.0"
  }
}
