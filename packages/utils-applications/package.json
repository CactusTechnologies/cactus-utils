{
  "name": "@cactus-technologies/node-application",
  "version": "3.0.4",
  "description": "Helper to manage PM2 App definitions and process states",
  "homepage": "https://github.com/CactusTechnologies/cactus-nodeapp-helper#readme",
  "bugs": {
    "url": "https://github.com/CactusTechnologies/cactus-nodeapp-helper/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CactusTechnologies/cactus-nodeapp-helper.git"
  },
  "license": "UNLICENCED",
  "author": "Cactus Technologies, LLC <hi@cactus.is> (https://www.cactus.is)",
  "main": "index.js",
  "scripts": {
    "precommit": "npm run docs && lint-staged",
    "depcheck": "depcheck --ignores=husky,config,electron --ignore-bin-package",
    "docs": "run-s docs:* -sn  && git add {README,TODO}.md AUTHORS",
    "docs:authors": "git log --format='%aN <%aE>' | sort -f | uniq > AUTHORS",
    "docs:readme": "mos README.md",
    "docs:todos": "npm run todos -s -- --reporter markdown > TODO.md",
    "test": "run-s test:* -sn",
    "test:lint": "eslint --ignore-path .gitignore '**/*.js'",
    "test:outdated": "npm outdated --long || true",
    "todos": "leasot './**/*' -Sx -i './node_modules/**/*'"
  },
  "dependencies": {
    "@cactus-technologies/errors": "^1.2.0",
    "@cactus-technologies/logger": "^2.1.0",
    "@cactus-technologies/utils": "^1.0.8",
    "@pm2/io": "^2.2.0",
    "async-exit-hook": "^2.0.1",
    "config": "^2.0.1",
    "debug": "^3.1.0",
    "dev-ip": "^1.0.1",
    "dotenv": "^6.0.0",
    "env-paths": "^1.0.0",
    "lodash": "^4.17.10",
    "moment-timezone": "^0.5.21",
    "pretty-ms": "^3.2.0",
    "request": "^2.87.0"
  },
  "devDependencies": {
    "depcheck": "^0.6.9",
    "eslint": "^4.19.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "husky": "^0.14.3",
    "leasot": "^6.3.0",
    "lint-staged": "^7.2.0",
    "mos": "^1.3.1",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.13.7"
  }
}
