{
  "name": "@cactus-technologies/node-application",
  "version": "1.4.0",
  "description": "Helper to manage PM2 App definitions and process states",
  "homepage": "https://github.com/CactusTechnologies/cactus-nodeapp-helper#readme",
  "bugs": {
    "url": "https://github.com/CactusTechnologies/cactus-nodeapp-helper/issues"
  },
  "license": "UNLICENCED",
  "author": "Cactus Technologies, LLC <hi@cactus.is> (https://www.cactus.is)",
  "main": "index.js",
  "directories": {
    "lib": "lib"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CactusTechnologies/cactus-nodeapp-helper.git"
  },
  "scripts": {
    "precommit": "npm run docs && lint-staged",
    "docs": "run-s docs:* -sn  && git add {README,TODO}.md AUTHORS",
    "docs:authors": "git log --format='%aN <%aE>' | sort -f | uniq > AUTHORS",
    "docs:readme": "mos README.md",
    "docs:todos": "npm run todos -s -- --reporter markdown > TODO.md",
    "test": "run-s test:* -sn",
    "test:depcheck": "depcheck --ignores=husky,config --ignore-bin-package",
    "test:lint": "eslint './**/*.js'",
    "test:outdated": "npm outdated --long",
    "todos": "leasot './**/**' --skip-unsupported --ignore './node_modules/**/**' --exit-nicely"
  },
  "dependencies": {
    "async-exit-hook": "^2.0.1",
    "config": "^1.30.0",
    "dev-ip": "^1.0.1",
    "dotenv": "^5.0.1",
    "env-paths": "^1.0.0",
    "lodash": "^4.17.10",
    "pmx": "^1.6.4",
    "pretty-ms": "^3.1.0"
  },
  "devDependencies": {
    "depcheck": "^0.6.8",
    "eslint": "^4.19.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-standard": "^3.1.0",
    "husky": "^0.14.3",
    "leasot": "^6.3.0",
    "lint-staged": "^7.1.0",
    "mos": "^1.3.1",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.12.1"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
